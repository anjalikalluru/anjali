import pandas as pd

data = {
    'Day': list(range(1, 21)),
    'Temperature': [22,21,23,24,22,25,26,27,28,29,30,28,27,29,31,30,32,33,34,35],
    'Humidity': [60,65,63,62,61,60,59,58,57,56,55,57,58,54,53,55,52,51,50,49],
    'WindSpeed': [5,7,6,5,4,6,5,4,6,5,7,6,5,6,5,4,6,5,7,6]
}

df = pd.DataFrame(data)
df.to_csv('weather_data.csv', index=False)
print("CSV file 'weather_data.csv' created successfully!")
